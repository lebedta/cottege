					<option value="0">PLG_DJCATALOG2_PAGEBREAK_NONE</option>
					<option value="1">PLG_DJCATALOG2_PAGEBREAK_VERTICAL</option>
					<option value="2">PLG_DJCATALOG2_PAGEBREAK_HORIZONTAL</option>
				</field>
			</fieldset>
		</fields>
	</config>
