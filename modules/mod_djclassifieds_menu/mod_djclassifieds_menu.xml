	<version>2.0.2</version>
	<description>DJ Classifieds Menu module</description>
	<files>
		<filename module="mod_djclassifieds_menu">mod_djclassifieds_menu.php</filename>
		<filename>index.html</filename>
		<folder>tmpl</folder>
		<folder>language</folder>
	</files>
	<config>
		<fields name="params">
			<fieldset name="basic">
				<field name="moduleclass_sfx" type="text" default="_menu" label="Module Class Suffix" description="PARAMMODULECLASSSUFFIX" />
